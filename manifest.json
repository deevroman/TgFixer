{
  "manifest_version": 2,
  "name": "TgFixer",
  "version": "1.0",
  "description": "Telegram url fixer. Automatically changes all links t.me/username on tg://resolve?domain=username\n",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/fix_page.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "48": "icons/border-48.png"
    }
  }
}